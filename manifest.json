{
  "manifest_version": 3,
  "name": "KojaChande",
  "version": "1.1",
  "description": "Find better price in torob.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon-16px.png",
    "48": "icon-48px.png",
    "128": "icon-128px.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.digikala.com/product/*",
        "https://www.amazon.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
